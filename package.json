{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "tsc && vite build && node ./server.js --port 3000",
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,ts,css,md,json,hbs}\" --config ./.prettierrc",
    "eslint": "eslint \"src/**/*.{js,ts,json}\" --fix",
    "stylelint": "stylelint \"**/*.{css, scss}\" --fix --allow-empty-input",
    "lint": "eslint . && stylelint '**/*.{css,scss}' && tsc --noEmit --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "stylelint": "^16.1.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "express": "^4.18.2",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.{js,ts,hbs}": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "*.{less,scss,css}": [
      "stylelint"
    ]
  }
}
