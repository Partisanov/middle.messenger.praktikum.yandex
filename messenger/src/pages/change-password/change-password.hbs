<div class="container">
    {{#>ProfileLayout}}
        <div class="profile__avatar-wrap" style="margin-bottom: 97px">
            <button class="profile__change-avatar-btn">Поменять
                аватар</button>
            {{> Avatar img="https://aabookshop.net/wp-content/plugins/wp-e-commerce/wpsc-components/theme-engine-v1/templates/wpsc-images/noimage.png" size=130 style="backgroundColor:'red'"}}
        </div>
        <ul class="profile__list">
            <li class="profile__item">{{>Input mode="fix" label="Старый пароль" name="oldPassword" type="password"  value=oldPassword }}</li>
            <li class="profile__item">{{>Input mode="fix" label="Новый пароль" name="newPassword" type="password"  value=newPassword}}</li>
            <li class="profile__item">{{>Input mode="fix" label="Повторите новый пароль" name="newPassword2" type="password"  value=newPassword2}}</li>
        </ul>
        <ul class="profile__list">
            <li class="profile__item_btn" style="display: flex; justify-content: center">{{>Button type="primary" label="Сохранить"}}</li>
        </ul>
    {{/ProfileLayout}}
</div>
