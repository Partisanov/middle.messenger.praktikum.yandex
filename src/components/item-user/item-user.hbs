<li class="user-item {{#if active}}active{{/if}}">
    <div class="user-item__wrap">
    {{>Avatar img=avatar size=47}}
    <div class="user-item__content">
        {{>UserName name=name}}
        <p class="user-item__text">{{message}}</p>
    </div>
    <div class="user-item__info">
        <span class="user-item__date">{{date}}</span>
        {{#if newMessage}} <div class="user-item__new-message">{{newMessage}}</div>{{/if}}
    </div>
    </div>
</li>
